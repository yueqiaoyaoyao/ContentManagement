<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="contentmanagement.mapper.RoleMapper">

    <insert id="addRole"  parameterType="String">
        insert into `cms_role` (name, functions)
        values (#{param1},#{param2})
    </insert>

    <select id="queryRole" resultType="Role">
        select * from `cms_role` where name = #{param1}
    </select>

    <select id="getAllRole" resultType="Role">
        select * from `cms_role`
    </select>

    <update id="updateRole">
        update `cms_role`
        set functions = #{param2}
        where name = #{param1}
    </update>

    <delete id="deleteRole">
        delete from `cms_role` where name = #{param1}
    </delete>

</mapper>